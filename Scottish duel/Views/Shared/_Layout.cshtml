<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <ul class="nav nav-pills nav-justified">
            <li style="font-size:24pt">@Html.ActionLink("Главная", "Index", "Home")</li>
            <li style="font-size:24pt">@Html.ActionLink("Играть", "Register", "Account")</li>
            <li style="font-size:24pt">@Html.ActionLink("О нас", "Contact", "Home")</li>
        </ul>



    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – "Шотландский поединок"</p>
        </footer>
    </div>
    @Html.Partial("~/Views/chat/chat.cshtml");
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/signalr/hubs"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
